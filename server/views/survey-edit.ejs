<%- include ./partials/header.ejs %>

<%- include ./partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Title</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter the Title"
                    name="title" 
                    value="<%= survey.title %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="subtitleTextField">Subtitle</label>
                    <input type="text" class="form-control" id="subtitleTextField"
                    placeholder="Subtitle"
                    name="subtitle" 
                    value="<%= survey.subtitle %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionTextField"
                    placeholder="Description"
                    name="description" 
                    value="<%= survey.description %>"
                    required>
                </div>

                <div class="form-group">
                  <label for="descriptionTextField">Question 1</label>
                  <input type="text" class="form-control"
                  id="descriptionTextField"
                  placeholder=""
                  name="enterQuestion1" 
                  value="<%= survey.enterQuestion1 %>"
                  required>
              </div>
              <div class="form-group">
                <label for="descriptionTextField">Question 2</label>
                <input type="text" class="form-control"
                id="descriptionTextField"
                placeholder=""
                name="enterQuestion2" 
                value="<%= survey.enterQuestion2 %>"
                required>
            </div>
            <div class="form-group">
              <label for="descriptionTextField">Question 3</label>
              <input type="text" class="form-control"
              id="descriptionTextField"
              placeholder=""
              name="enterQuestion3" 
              value="<%= survey.enterQuestion3 %>"
              required>
          </div>
                
                
                <div class="w-100">
                    
                    <div class="row">
                      <div class="col-6">
                        <div class="input-group mb-4">
                          <div class="input-group-prepend">
                            <div class="input-group-text">Start</div>
                          </div>
                          <input type="datetime-local" class="form-control" id="start" name="start" value="<%= survey.start %>" required placeholder="<%= survey.start %>">
                        </div>
      
                      </div>
                      <div class="col-6">
                        <div class="input-group mb-4">
                          <div class="input-group-prepend">
                            <div class="input-group-text">End</i></div>
                          </div>
                          <input type="datetime-local" class="form-control" id="end" name="end" value="<%= survey.end %>" required>
                        </div>
      
                      </div>
                    </div>
                  </div>
                  
                


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ./partials/bottom_nav.ejs %>  

