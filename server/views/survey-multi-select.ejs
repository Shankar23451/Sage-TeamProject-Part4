<%- include partials/header.ejs %> 

<%- include partials/main_nav.ejs %> 

<%- include partials/loginForm.ejs %>



  <main>
    <div class="shadow-lg" style="background-color: rgb(145, 187, 224); ">
      <div class="container "  >
        <h1 class="display-10 " style="text-align: center; padding: 10px; "><%= title %></h1>
      </div>
    </div>
    
    <div class="container">
      <div class="row">
        <div class="col-4">

        </div>
        <div class="col-4">
          <form class="form" method="POST">
            <div class="form-row align-items-center">
  
              <div class="w-100">
                <label class="sr-only" for="title">Multi Select Question:</label>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                  </div>
                  <input type="text" class="form-control" id="enterMultiQuestion" name="enterMultiQuestion" placeholder="Multi Select Question" required>
                </div>
              </div>

              <div class=" w-100">
                <hr class="solid">
              </div>
             <hr class="solid" style="color: black; ">

             <div class="w-100">
              <label class="sr-only" for="title">Answer 1:</label>
              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                </div>
                <input type="text" class="form-control" id="enterMultiAnswer1" name="enterMultiAnswer1" placeholder="Survey Answer 1" required>
              </div>
            </div>
            
            <div class="w-100">
              <label class="sr-only" for="title">Answer 2:</label>
              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                </div>
                <input type="text" class="form-control" id="enterMultiAnswer2" name="enterMultiAnswer2" placeholder="Survey Answer 2" required>
              </div>
            </div>

            <div class="w-100">
              <label class="sr-only" for="title">Answer 3:</label>
              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                </div>
                <input type="text" class="form-control" id="enterMultiAnswer3" name="enterMultiAnswer3" placeholder="Survey Answer 3" required>
              </div>
            </div>

            <div class="w-100">
              <label class="sr-only" for="title">Answer 4:</label>
              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                </div>
                <input type="text" class="form-control" id="enterMultiAnswer4" name="enterMultiAnswer4" placeholder="Survey Answer 4" required>
              </div>
            </div>

            <div class="form-row">
              <div class="col-auto mx-auto d-block">
                <button type="submit" class="btn btn-primary mb-2" id="sendButton"><i class="fas fa-paper-plane"></i> Create Survey</button>
              </div>
            </div>

          </form>
        </div>
        <div class="col-4">

        </div>
      </div>
    </div>
    

  </main>

